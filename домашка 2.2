package org.example;

import net.thauvin.erik.crypto.CryptoPrice;
import java.util.Scanner;

public class Main {
    public static void main(String[] args) throws Exception
    {
        var scanner = new Scanner(System.in);

        //System.out.println("Яка ціна біткоїна сьогодні?");
        //var rate = scanner.nextDouble();
        var rate = CryptoPrice.spotPrice("BTC");
        System.out.println("Ціна BTC = " + rate.getAmount());


        while (true) {
            System.out.println("Скільки доларів маєш?");
            var dollars = scanner.nextDouble();

            if (dollars == 0) {

                System.out.println("Дякую, що скористалися програмою");
                break;
            }



            var result = dollars / rate.getAmount().doubleValue();
            System.out.println("Ти можеш отримати BTC = " + result);
        }
    }
}
